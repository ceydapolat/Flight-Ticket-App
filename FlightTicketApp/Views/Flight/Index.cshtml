@model IQueryable<Flight>

<div class="my-5"></div>

<form action="GetOneFlightByCondition" method="post">
    <label name="DepartureAirport">Departure Airport:</label> &nbsp;
    <select name="DepartureAirport" name="DepartureAirport" class="form-control-sm">
        <option>İstanbul/Sabiha Gökçen Airport</option>
        <option>İstanbul/İstanbul Airport</option>
        <option>İzmir/Adnan Menderes Airport</option>
        <option>Muğla/Dalaman Airport</option>
    </select>

    <label name="ArrivalAirport">Arrival Airport:</label> &nbsp;
    <select name="ArrivalAirport" name="ArrivalAirport" class="form-control-sm">
        <option>İstanbul/Sabiha Gökçen Airport</option>
        <option>İstanbul/İstanbul Airport</option>
        <option>İzmir/Adnan Menderes Airport</option>
        <option>Muğla/Dalaman Airport</option>
    </select>

    <label name="DepartureDate">Departure Date:</label> &nbsp;
    <input name="DepartureDate" name="DepartureDate" class="form-control-sm" type="date">

    <label name="ReturnDate">Return Date:</label> &nbsp;
    <input name="ReturnDate" name="ReturnDate" class="form-control-sm" type="date">
    
    <div class="my-3">
        <button asp-controller="Flight" asp-action="GetOneFlightByCondition" method="GetOneFlightByCondition"
            type="submit" class="btn btn-primary">
            Search Flights
            <i class="fa-solid fa-arrow-right"></i>
        </button>
    </div>
</form>



